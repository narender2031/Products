<meta name="viewport" content="width= device-width initail-scale=1" />
<body style="background: #f5f5f5">
    <div class="container login-container">
        <div class="col-sm-12 col-md-4 col-md-offset-4 col-xs-12">
            <div class="brand">
                <%#= image_tag "logo-11.png", class: "brand-logo-login" %>
            </div>
        </div>
    </div>
   
    <%= form_tag login_path, id: "msform",:html => {:autocomplete => "off"}  do %>
        <fieldset>
        <% flash.each do |key, value| %>
            <div class="alert alert"><%= key %> <%= value %></div>
        <% end %>
        <h2 class="fs-title">Log In</h2>
        
            <div class="form-group">
                <%= text_field_tag :email, params[:email], placeholder: "Username", class: "login-field", :autocomplete => :off%>
            </div>
            <div class="form-group">
                <%= password_field_tag :password, params[:password],placeholder: "Password", class: "login-field", :autocomplete => :off %>
            </div>
            <div class="col-dm-3">
                <div class="action">
                    <%= submit_tag "Log In", class: "btn btn-success center login-submit",  id:"login"%>   
                    <%= link_to "Sign Up", register_path, id:"sign_up"%> 
                </div> 
            </div> 
        </fieldset>     
    <% end %>    
</body>
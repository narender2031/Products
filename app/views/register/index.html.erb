<meta name="viewport" content="width= device-width initail-scale=1" />
<body style="background: #f5f5f5">
    <div class="container login-container">
        <div class="col-sm-12 col-md-4 col-md-offset-4 col-xs-12">
            <div class="brand">
                <%#= image_tag "logo-11.png", class: "brand-logo-login" %>
            </div>
        </div>
    </div>
   
    <%= form_for @user, url: register_path, :html => {id: "msform",:autocomplete => "off"}  do |f|  %>
        <fieldset>
        <% flash.each do |key, value| %>
            <div class="alert alert"><%= key %> <%= value %></div>
        <% end %>
        <h2 class="fs-title">Sign Up</h2>
            <div class="form-group">
                <%= f.text_field :first_name, placeholder: "First Name", class: "login-field", :autocomplete => :off%>
            </div>
            <div class="form-group">
                <%= f.text_field :last_name, placeholder: "Last Name", class: "login-field", :autocomplete => :off%>
            </div>
            <div class="form-group">
                <%= f.text_field :email, placeholder: "Email", class: "login-field", :autocomplete => :off%>
            </div>
            <div class="form-group">
                <%= f.text_field :phone, placeholder: "Phone", class: "login-field", :autocomplete => :off%>
            </div>
            <div class="form-group">
                <%= f.password_field :password ,placeholder: "Password", class: "login-field", :autocomplete => :off %>
            </div>
            <div class="col-dm-3">
                <div class="action">
                    <%= f.submit "Sign Up", class: "btn btn-success center login-submit",  id:"login"%>   
                    <%= link_to "Log In", login_path, id:"sign_up"%> 
                </div> 
            </div> 
        </fieldset>     
    <% end %>    
</body>